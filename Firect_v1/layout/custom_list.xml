<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="255dp">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/firectlogo"
            android:id="@+id/image"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"

            >




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Kashmiri Apple"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Price:₹WX.YZ"
                android:textColor="@color/main"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="Farmer Name:Sandeep Kamath"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv4"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="Distance X km"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv5"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="Today's Market price:₹WX.YZ"
                android:textColor="@color/red"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv6"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="Quantity Available:XY kg"
                android:textColor="@color/black"
                />



        </LinearLayout>



    </LinearLayout>


</LinearLayout>