        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/myrv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_rv_banner"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"
            />

        <LinearLayout
            android:id="@+id/DealLayout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:background="@drawable/dealoftheday__1_"
            android:layout_marginBottom="2dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="@string/deals_of_the_day"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="cursive"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:paddingStart="10dp"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/show_more"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/show_more"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/white"
                    android:layout_weight="0.4"
                    android:layout_margin="0dp"
                    android:textSize="12sp"
                    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                    />

            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_rv_deal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/SeasonalLayout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:background="@drawable/seasonal_1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="@string/seasonal_special"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="cursive"
                    android:layout_marginStart="10dp"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"
                    android:layout_margin="2sp"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/show_more_seasonal"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/show_more"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/white"
                    android:layout_weight="0.4"
                    android:layout_margin="0dp"
                    android:textSize="12sp"
                    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                    />

            </LinearLayout>




            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_rv_seasonal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                />


        </LinearLayout>









<!--</LinearLayout>-->


<!--    </androidx.core.widget.NestedScrollView>-->



</LinearLayout>